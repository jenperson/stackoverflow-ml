{
  "compilerOptions": {
    "types": ["chai", "mocha", "node"],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["dom", "es2017", "WebWorker"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
